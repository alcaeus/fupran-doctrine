{% extends 'base.html.twig' %}

{% block body %}
    {% if stations is empty %}
        <div class="alert alert-warning" role="alert">No stations found!</div>
    {% else %}
        <div id="stations" class="row row-cols-3 gy-4">
            {% for station in stations %}
                <div class="col">
                    <div id="{{ station.id }}" class="card">
                        <div class="card-body">
                            <h5 class="text-truncate"><a href="{{ path('app_stations_show', {'id': station.id }) }}">{{ station.name }}</a></h5>
                            <h6 class="card-subtitle text-muted">{{ station.brand|default('Â ') }}</h6>
                            <address class="card-text">
                                {{ station.address.street }} {{ station.address.houseNumber }}<br />
                                {{ station.address.postCode }} {{ station.address.city }}
                            </address>
                        </div>
                    </div>
                </div>
            {% endfor %}

            <div class="col-12">
                {% block paginator %}
                <twig:Paginator currentPage="{{ stations.page }}" totalPages="{{ stations|length }}" routeName="app_stations" />
                {% endblock %}
            </div>
        </div>
    {% endif %}
{% endblock %}
