{% extends 'base.html.twig' %}

{% block body %}
    {% if stations is empty %}
        <div class="alert alert-warning" role="alert">No stations found!</div>
    {% else %}
        <div id="stations" class="row row-cols-3 gy-4">
            {% for station in stations %}
                <twig:Station:ListCard station="{{ station }}" />
            {% endfor %}

            <div class="col-12">
                {% block paginator %}
                <twig:Paginator currentPage="{{ stations.page }}" totalPages="{{ stations|length }}" routeName="app_stations" />
                {% endblock %}
            </div>
        </div>
    {% endif %}
{% endblock %}
