<div
    {{ attributes }}
    data-controller="chart"
    data-chart-url-value="{{ this.chartHelper.baseUrl }}"
    data-chart-chart-value="{{ this.chartId }}"
    data-chart-station-value="{{ this.station is not null ? this.station.id : null }}"
    data-chart-fuel-value="{{ this.fuel }}"
>
    {% if this.allowRangeFilter %}
    <div>
        <h5>Filter</h5>
        <form class="row">
            <label for="chartFilterFromDay" class="col-auto col-form-label col-form-label-sm">From:</label>
            <div class="col-sm-2">
                <input type="date" data-chart-target="fromDay" class="form-control form-control-sm" id="chartFilterFromDay" name="fromDay" value="2024-11-01" />
            </div>

            <label for="chartFilterToDay" class="col-auto col-form-label col-form-label-sm">To:</label>
            <div class="col-sm-2">
                <input type="date" data-chart-target="toDay" class="form-control form-control-sm" id="chartFilterToDay" name="ToDay" value="2024-11-30" />
            </div>

            <div class="col-sm-2">
                <button type="button" data-action="click->chart#updateChartFilter" class="btn btn-sm btn-primary">Update</button>
            </div>
        </form>
    </div>
    {% endif %}
    <div data-chart-target="chart" style="height: 600px;"></div>
</div>
