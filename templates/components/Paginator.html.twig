<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="{{ path(this.routeName, {page: this.currentPage - 1 }) }}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        {% if this.currentPage != 1 %}
        <li class="page-item">
            <a class="page-link" href="{{ path(this.routeName, {page: 1 }) }}" aria-label="1">
                <span aria-hidden="true">1</span>
            </a>
        </li>
        {% endif %}
        {% if this.currentPage > 2 %}
        <li class="page-item disabled"><a class="page-link">...</a></li>
        {% endif %}

        <li class="page-item active" aria-current="page">
            <a class="page-link" href="#">{{ this.currentPage }}</a>
        </li>

        {% if this.currentPage < this.totalPages - 1 %}
        <li class="page-item disabled"><a class="page-link">...</a></li>
        {% endif %}
        {% if this.currentPage != this.totalPages %}
        <li class="page-item">
            <a class="page-link" href="{{ path(this.routeName, {page: this.totalPages }) }}" aria-label="{{ this.totalPages }}">
                <span aria-hidden="true">{{ this.totalPages }}</span>
            </a>
        </li>
        {% endif %}

        <li class="page-item">
            <a class="page-link" href="{{ path(this.routeName, {page: this.currentPage + 1 }) }}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>
<p class="text-muted">Page {{ this.currentPage }} of {{ this.totalPages }}</p>
